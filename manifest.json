{
    "manifest_version": 3,
    "name": "Time Extension",
    "version": "1.0",
    "description": "This extension will display the current time.",
    "permissions": ["activeTab"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon-16.png"
    },
    "icons": {
        "16": "icon-16.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
    }
}
